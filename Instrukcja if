/* C */
//  instrukcja if
#include <stdio.h>
#include <conio.h>
int main()
{
  int x;
  printf("\npodaj liczbe: ");
  scanf("%d",&x);
  if (x < 0) x= -x;
  printf("\nwartosc bezwzgledna = %d",x);
  getche();
  return 0;
}



/* C */
//instrukcja if
#include <stdio.h>
#include <conio.h>
#include <math.h>
int main()
{
    int a, b, c, kw;
    printf("\npodaj a, b i c : ");
    scanf("%d %d %d",&a, &b, &c);
    kw = a*a + b*b;
    if (kw == c*c)
       printf("\n trojkat prostokatny");
    else
       print("\n to nie jest trojkat prostokatny");
    getche();
    return 0;
}
