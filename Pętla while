/* C */
//  petla while
#include <stdio.h>
#include <conio.h>
int main()
{
   int x = 0;
   while (x <= 5)
   {
     printf("kwadrat liczby %4d = %d \n",x,x*x);
     x++;
   }
   getche();
   return 0;
}



/* C */
//  petla while
#include <stdio.h>
#include <conio.h>
#include <math.h>
int main()
{
   float x;
   clrscr();
   printf("\nliczba startowa: ");
   scanf("%f",&x);
   while (x > 0)
   {
      printf("\n pierwiastek z liczby%8.2f =%8.2f", x, sqrt(x));
      x--;
   }
   printf("\nkoniec");
   getche();
   return 0;
}
